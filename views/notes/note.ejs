<% layout("/layouts/boilerplate.ejs") %>

<title>SecureNote : Note</title>

<div class="row">
  <h1 class="p-0">Note #<%= id %></h1>
</div>
<div class="row">
  <textarea
    class="form-control bg-warning-subtle border-0 my-2"
    rows="6"
    name=""
    id=""
    disabled
  >
<%= content %></textarea
  >
</div>
<div class="row">
  <p class="col-12 bg-info-subtle rounded-2 p-2">
    This note is destroyed. If needed, copy the contents of the note before
    leaving this page.
  </p>
</div>
<div class="row mt-4">
  <div class="p-0">
    <button class="btn btn-primary btn-dark me-4">Select Text</button>
    <a href="/" class="btn btn-primary add-btn">Create New Note</a>
  </div>
</div>
